<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="cardYellowText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>
    <style name="cardHeaderText" parent="">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>
    <style name="cardBlackText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>
    <style name="cardInfoText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>
    <style name="LoginTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="LoginEditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:fontFamily">@font/roboto</item>
    </style>


</resources>
